{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "containerGroups_hw2_dev_name": {
          "defaultValue": "hw2-dev",
          "type": "String"
      }
  },
  "variables": {},
  "resources": [
      {
          "type": "Microsoft.ContainerInstance/containerGroups",
          "apiVersion": "2022-10-01-preview",
          "name": "[parameters('containerGroups_hw2_dev_name')]",
          "location": "eastus",
          "properties": {
              "sku": "Standard",
              "containers": [
                  {
                      "name": "[parameters('containerGroups_hw2_dev_name')]",
                      "properties": {
                          "image": "mcr.microsoft.com/azuredocs/aci-helloworld:latest",
                          "ports": [
                              {
                                  "protocol": "TCP",
                                  "port": 80
                              }
                          ],
                          "environmentVariables": [],
                          "resources": {
                              "requests": {
                                  "memoryInGB": 1.5,
                                  "cpu": 1
                              }
                          }
                      }
                  }
              ],
              "initContainers": [],
              "restartPolicy": "OnFailure",
              "ipAddress": {
                  "ports": [
                      {
                          "protocol": "TCP",
                          "port": 80
                      }
                  ],
                  "ip": "20.241.212.108",
                  "type": "Public",
                  "dnsNameLabel": "[concat('cpa-', parameters('containerGroups_hw2_dev_name'))]",
                  "autoGeneratedDomainNameLabelScope": "TenantReuse"
              },
              "osType": "Linux"
          }
      }
  ]
}